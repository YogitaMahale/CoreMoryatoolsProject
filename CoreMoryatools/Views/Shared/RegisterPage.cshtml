
@model CoreMoryatools.Areas.Identity.Pages.Account.RegisterModel
<div class="logo-w">

    <a href="#"><img alt="" src="~/admintheme/img/logo-big.png" /></a>
</div>
<h4 class="auth-header">Create new account</h4>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form-group">
        <label for=""> Name</label>

        <input class="form-control" asp-for="Input.name" />
        <span asp-validation-for="Input.name" class="text-danger"></span>



    </div>
    <div class="form-group">
        <label for=""> Address</label>

        <input class="form-control" asp-for="Input.address1" />
        <span asp-validation-for="Input.address1" class="text-danger"></span>



    </div>
    <div class="form-group">

        <label for=""> Mobile No</label>
        <input class="form-control" asp-for="Input.PhoneNumber" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>



    </div>
    <div class="form-group">

        <label for=""> Email Id</label>
        <input class="form-control" asp-for="Input.Email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>


    </div>
